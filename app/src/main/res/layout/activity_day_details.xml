<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcf9ff">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top_left"
        android:layout_width="156dp"
        android:layout_height="303dp">

        <ImageView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/top_left" />

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:text="VILLE"
            android:textSize="15sp" />

    </FrameLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top_right"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/top_left">


        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="40dp"
            android:text="INFO1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/day_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="80dp"
            android:text="INFO2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/day_wind_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="120dp"
            android:text="Wind direction"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/day_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="160dp"
            android:text="INFO4"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/day_interval_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="200dp"
            android:text="INFO5"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/day_pression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="240dp"
            android:text="INFO6"
            android:textSize="15sp" />

    </FrameLayout>

    <ListView
        android:id="@+id/day_3hours_forecast"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="301dp"
        android:layout_marginBottom="123dp">

    </ListView>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/day_3hours_forecast"
        android:layout_marginBottom="-53dp"
        android:layout_weight="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignBottom="@+id/view_pager"
        android:layout_marginBottom="-70dp"
        android:background="#9CD4E5"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>